<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="13dp"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/imgprofie"
            android:layout_width="379dp"
            android:layout_height="262dp"
            android:layout_marginTop="8dp"
            android:background="@color/primary"
            android:src="@drawable/bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/textHeader"
            style="@style/textViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:gravity="center_horizontal"
            android:text="18SOEIT11012"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgprofie" />
        <TextView
            android:id="@+id/textFirstName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/textViewStyle"
            android:gravity="start"
            android:text="PRANAV"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textHeader" />
        <TextView
            android:id="@+id/textMiddleName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/textViewStyle"
            android:text="JITENDRAKUMAR"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textFirstName" />
        <TextView
            android:id="@+id/textLastName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/textViewStyle"
            android:text="KAKADIYA"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textMiddleName" />
        <TextView
            android:id="@+id/textEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/textViewStyle"
            android:text="pkakadiya274@rku.ac.in"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.36"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textLastName" />
        <TextView
            android:id="@+id/textGender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/textViewStyle"
            android:text="Male"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textEmail" />
        <TextView
            android:id="@+id/textCity"
            style="@style/textViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="250dp"
            android:gravity="center_horizontal"

            android:text="RAJKOT"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.64"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textGender" />
        <TextView
            android:id="@+id/textState"
            style="@style/textViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="250dp"
            android:gravity="center_horizontal"
            android:text="GUJARAT"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textGender" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
